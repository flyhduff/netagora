{% extends "ECENetagoraBundle::menu_notlogged.html.twig" %}

{% block content %}

    <form id="subscribe">
    	<fieldset>
    		<legend class="subtitle">Subscribe</legend>
    		<ol>
    			<li>
    				<label for=username>Pseudo</label>
    				<input id=username name=username type=text placeholder="Enter your username" required autofocus>
    			</li>
    			<li>
    				<label for=email>Email</label>
    				<input id=email name=email type=email placeholder="Enter your mail address" required>
    			</li>
       			<li>
    				<label for=phone>Password</label>
    				<input id=pass name=pass type=password placeholder="">
    			</li>
    			<li>
    				<label for=phone>Confirm password</label>
    				<input id=passconfirm name=passconfirm type=password placeholder="">
    			</li>
			</ol>
       	</fieldset>
    	    	
     	<div class="division"></div>
 
      	<fieldset>
    		<button type=submit>Register</button>
    	</fieldset>
    </form>
        
{% endblock %}